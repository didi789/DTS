                    android:textColor="#795548"
                    android:textSize="30sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnAF6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="1dp"

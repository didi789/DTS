<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.didi.dts.GameActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">

        <ImageButton
            android:id="@+id/angry_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/playshape"
            android:gravity="center"
            android:src="@drawable/playButton"
            android:textColor="#060308" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/answerTextFL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">


        <TextView
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="פה תהיה התשובה שיכניסו יום אחד"
            android:textSize="20sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/keyboardLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="vertical">

        <!--first line-->
        <LinearLayout
            android:id="@+id/keyboardFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="א"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="ב"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="ג"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="ד"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="ה"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="ו"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />


            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="ז"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>
        <!--first line-->
        <LinearLayout
            android:id="@+id/keyboardSL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="ח"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="ט"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="י"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="כ"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="ל"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="מ"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />


            <Button
                android:id="@+id/btn14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7188AB"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1"
                android:text="נ"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <com.google.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        ads:adSize="BANNER"
        ads:adUnitId="MY_AD_UNIT_ID"
        ads:loadAdOnCreate="true"
        ads:testDevices="TEST_EMULATOR, TEST_DEVICE_ID" />
</LinearLayout>

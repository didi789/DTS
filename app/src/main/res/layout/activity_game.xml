                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
            </LinearLayout>
            <!--second line-->
            <LinearLayout
                android:id="@+id/keyboardSL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

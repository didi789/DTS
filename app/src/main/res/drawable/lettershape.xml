<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="15dp" />
    <gradient
        android:angle="315"
        android:centerColor="#5363CF"
        android:centerX="28%"
        android:endColor="#448AFF"
        android:startColor="#E8E8E8"
        android:type="linear" />
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
    <size
        android:width="60dp"
        android:height="60dp" />
    <stroke
        android:width="3dp"
        android:color="#878787" />
</shape>

